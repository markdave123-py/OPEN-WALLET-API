{
  "compilerOptions": {
    "target": "ES2021",                          
    "module": "CommonJS",                    
    "lib": ["ESNext"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "app",
    "strict": true,         
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },

  "ts-node": {
    "esm": true
  }
}